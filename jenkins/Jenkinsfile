properties([disableConcurrentBuilds()])

pipeline {
    agent {
        kubernetes {
            label 'jenkins-nodejs'
        }
    }
    //tools {docker 'jenkins-docker'}
    
    

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/STaLeRGooD/web-testing.git'
            }
        }

// "Это работает, но возможно бесполезно"
        // stage('Build') {
